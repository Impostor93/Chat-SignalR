<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/ChatStyle/FBPopUp.css")
    @Styles.Render("~/ChatStyle/PopupStyle.css")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Chat", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <div style="" id="popupInitialContent"></div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script type="text/javascript" src="https://code.jquery.com/jquery-1.9.1.js"></script>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script type="text/javascript" src="https://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>

    <script src="@Url.Content("~/Scripts/jquery.signalR-2.2.0.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.signalR-2.2.0.min.js")"></script>

    <!--Reference the autogenerated SignalR hub script. -->
    <script src="@Url.Content("~/signalr/hubs")"></script>

    @Scripts.Render("~/ChatScript/RequestCreator.js")
    @Scripts.Render("~/ChatScript/System.js")
    @Scripts.Render("~/ChatScript/Extensions.js")
    @Scripts.Render("~/ChatScript/ChatScript.js")
    @Scripts.Render("~/ChatScript/ChatObjects.js")
    @Scripts.Render("~/ChatScript/ChatConferencePopup.js")


</body>

<script>
    $(document).ready(function () {

        if ("@(User.Identity.IsAuthenticated == true && Session["UserIdentifier"] != null)" == "True") {
            Chat.Start("@Session["UserIdentifier"]");
            sizeListOfUsers()
        }
    });
    function sizeListOfUsers() {
        document.getElementById("UserInList").style.maxHeight = (document.documentElement.clientHeight - 105) + "px"
        document.getElementById("listContent").style.maxHeight = (document.documentElement.clientHeight - 110) + "px"
    }
</script>

</html>
